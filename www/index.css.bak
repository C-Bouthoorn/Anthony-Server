html {
  background-color: #333;
  color: #f9f;
  font-family: 'Open Sans', sans-serif;
  font-weight: 400;
}

body {
  width: 50%;
  padding-left: 25%;
  padding-top: 10%;
}

.status {
  font-weight: 300;
  color: #fff;

  padding-left: 20px;

  transition: color 0.1s;
}

.error {
  color: #f00;
  font-weight: 600;
}

input {
  border: 0;
  border-radius: 2px;

  font-family: 'Open Sans', sans-serif;

  background-color: #fff;
  color: #000;
  padding: 2px 5px 2px 5px;

  transition: background-color 0.3s;
}

input:focus {
  background-color: #cff;
}

input[type=button] {
  border-radius: 5px;
}

input[type=button]:hover {
  background-color: #dff;
}

input[type=button]:focus {
  background-color: #bff;
}

a {
  color: #9f9;
  text-decoration: none;

  transition: color 0.3s, text-decoration 0.3s;
}

a:hover {
  color: #9ff;
  text-decoration: underline;
}

h1, h2, h3, h4, h5, h6 {
  margin: 0;
  padding: 0;
}

nav {
  margin: 0;
  padding: 0;
}

nav ul {
  margin: 0;
  list-style: none;
  padding-left: 10px;
  padding-bottom: 10px;
}

nav ul li::before {
  content: 'Ã—';
  padding-right: 10px;
}

table {
  border-collapse: separate;
}

table tr td:first-child {
  padding-right: 20px;
  font-weight: 600;
}
